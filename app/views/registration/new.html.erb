<div class="w-screen h-screen flex justify-center items-center">
    <div class="flex flex-col w-full max-w-md px-4 py-8 bg-white rounded-lg shadow dark:bg-gray-800 sm:px-6 md:px-8 lg:px-10 m-10">
        <div class="self-center mb-2 text-xl font-light text-gray-800 sm:text-2xl dark:text-white">
            Create a new account
        </div>
        <div class = "justify-center text-sm text-center text-gray-500 flex-items-center dark:text-gray-400">
                Already have an account ? <%= link_to "Log in", "login", class: 'text-sm text-blue-500 underline hover:text-blue-700' %></p>
        </div>
        <div class="mt-8">
            <%= form_with model: @user, url: signup_path do |f| %>
                <div class="flex flex-col mb-2">
                    <div class="flex relative "> 
                        <%= f.text_field :name, value: '', class: 'rounded-r-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent', placeholder: 'Name' %>
                    </div>
                </div>

                <div class="flex flex-col mb-2">
                    <div class="flex relative "> 
                        <%= f.email_field :email, value: '', class: 'rounded-r-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent', placeholder: 'Email' %>
                    </div>
                </div>
                
                <div class="flex flex-col mb-2">
                    <div class="flex relative ">
                        <%= f.password_field :password, value: '', class: 'rounded-r-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent', placeholder: 'Password' %>
                    </div>
                </div>

                <div class="flex flex-col mb-6">
                    <div class="flex relative ">
                        <%= f.password_field :password_confirmation, value: '', class: 'rounded-r-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent', placeholder: 'Confirm Password' %>
                    </div>
                </div>
                
                <div class="flex w-full">
                    <%= f.submit "Sign Up", class: "py-2 px-4  bg-purple-600 hover:bg-purple-700 focus:ring-purple-500 focus:ring-offset-purple-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>